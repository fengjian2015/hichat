<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/none_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <TextView
            android:id="@+id/tv_dialog_contact_friend_info_confirm"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="@string/confirm_delete_this_friend"
            android:gravity="center"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/red_light2"
            android:background="@drawable/press_corner_white_gray_4"
            />


        <TextView
            android:id="@+id/tv_dialog_contact_friend_info_cancel"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="@string/cancel"
            android:gravity="center"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:layout_marginTop="5dp"
            android:background="@drawable/press_corner_white_gray_4"
            />

    </LinearLayout>

</RelativeLayout>