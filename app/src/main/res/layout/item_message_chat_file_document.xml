<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_message_chat_file_document_item_check"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/select_corner_img_hook"
            />

        <com.wewin.hichat.androidlib.widget.CircleImageView
            android:id="@+id/iv_message_chat_file_document_item_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="65dp"
            android:src="@drawable/img_avatar_default"
            app:shape_type="rectangle"
            app:radius="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="113dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message_chat_file_document_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_33"
                android:textSize="@dimen/font_size_14"
                tools:text="name.doc" />

            <TextView
                android:id="@+id/tv_message_chat_file_document_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/font_size_11"
                tools:text="time" />

        </LinearLayout>

        <include
            layout="@layout/layout_divider_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</FrameLayout>