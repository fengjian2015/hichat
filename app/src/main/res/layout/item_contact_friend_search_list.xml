<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_contact_friend_search_list_letter"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/gray_f2"
        android:paddingLeft="12dp"
        tools:text="A"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/gray_92"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_item_search_friend_check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/unselected_hollow_big"
            />

        <com.wewin.hichat.androidlib.widget.CircleImageView
            android:id="@+id/iv_contact_friend_search_list_avatar"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/img_avatar_default"
            android:layout_marginLeft="17dp"
            android:scaleType="centerCrop"
            app:shape_type="round"
            />

        <TextView
            android:id="@+id/tv_contact_friend_search_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:layout_marginLeft="11dp"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/black_00"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_f1"
        android:layout_marginLeft="108dp"
        />

</LinearLayout>