<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_f9"
    android:orientation="vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            >

            <com.wewin.hichat.androidlib.widget.CircleImageView
                android:id="@+id/civ_more_personal_info_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:shape_type="round"
                android:src="@drawable/img_avatar_default" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/photo_replace_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_more_personal_info_nickname"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            android:layout_marginLeft="100dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:hint="@string/nickname"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:maxLength="7"
            />

        <TextView
            android:id="@+id/tv_more_personal_info_nickname_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/7"
            android:textSize="11dp"
            android:textColor="@color/gray_c3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_more_personal_info_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/black_33"
            android:textSize="@dimen/font_size_12"
            android:textColorHint="@color/gray_99"
            android:hint="@string/introduce_yourself_simply"
            android:minHeight="55dp"
            android:maxLength="50"
            android:gravity="start"
            android:paddingLeft="22dp"
            android:paddingTop="10dp"
            android:paddingRight="22dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/tv_more_personal_info_sign_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/50"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/gray_c3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>


</LinearLayout>