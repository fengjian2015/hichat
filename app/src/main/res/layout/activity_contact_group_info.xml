<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:background="@color/gray_f1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >

            <com.wewin.hichat.androidlib.widget.CircleImageView
                android:id="@+id/civ_contact_group_info_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                app:shape_type="round"
                android:src="@drawable/img_avatar_default"
                />

            <TextView
                android:id="@+id/tv_contact_group_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="name"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/black_00"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="26dp"
                />

            <TextView
                android:id="@+id/tv_contact_group_info_group_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="phoneNum"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="51dp"
                />

            <ImageView
                android:id="@+id/iv_contact_group_info_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_con_blue"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/gray_f1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="22dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_contact_group_info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="sign"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:gravity="center_vertical"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/white"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nickname"
                android:textSize="@dimen/font_size_11"
                android:textColor="@color/gray_be"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/tv_contact_group_info_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="name"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_marginLeft="22dp"
            />

        <FrameLayout
            android:id="@+id/fl_contact_group_info_invite_new_member"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_new_member"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_right_black"
                android:layout_marginRight="22dp"
                android:layout_gravity="end|center_vertical"
                />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_marginLeft="22dp"
            />

        <FrameLayout
            android:id="@+id/fl_contact_group_info_check_group_member"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_group_member"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_right_black"
                android:layout_marginRight="22dp"
                android:layout_gravity="end|center_vertical"
                />

            <TextView
                android:id="@+id/tv_contact_group_info_member_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="memberCount"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/gray_be"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="42dp"
                />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_marginLeft="22dp"
            />

        <FrameLayout
            android:id="@+id/fl_contact_group_info_group_announcement"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_announcement"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_right_black"
                android:layout_marginRight="22dp"
                android:layout_gravity="end|center_vertical"
                />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_contact_group_info_make_top"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_top_conversation"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_marginLeft="22dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/iv_contact_group_info_make_top"
                android:layout_width="33dp"
                android:layout_height="17dp"
                android:button="@null"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="22dp"
                android:src="@drawable/select_corner_img_slide"
                />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_marginLeft="22dp"
            />

        <FrameLayout
            android:id="@+id/fl_contact_group_info_shield_group_conversation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shield_group_conversation"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_marginLeft="22dp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/iv_contact_group_info_shield_group_conversation"
                android:layout_width="33dp"
                android:layout_height="17dp"
                android:button="@null"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="22dp"
                android:src="@drawable/select_corner_img_slide"
                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_contact_group_permission_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

            <FrameLayout
                android:id="@+id/fl_contact_group_info_allow_search"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="visible"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allow_search"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="22dp"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/iv_contact_group_info_allow_search"
                    android:layout_width="33dp"
                    android:layout_height="17dp"
                    android:button="@null"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/select_corner_img_slide"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_contact_group_info_need_verify"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/need_verify"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="22dp"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/iv_contact_group_info_need_verify"
                    android:layout_width="33dp"
                    android:layout_height="17dp"
                    android:button="@null"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/select_corner_img_slide"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_contact_group_info_allow_member_invite"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allow_member_invite_friend"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="22dp"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/iv_contact_group_info_allow_member_invite"
                    android:layout_width="33dp"
                    android:layout_height="17dp"
                    android:button="@null"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/select_corner_img_slide"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_contact_group_info_talk_banned"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_talk_banned"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="22dp"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/iv_contact_group_info_talk_banned"
                    android:layout_width="33dp"
                    android:layout_height="17dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/select_corner_img_slide"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/only_allow_manager_speak"
                    android:textSize="@dimen/font_size_12"
                    android:textColor="@color/gray_be"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="67dp"
                    />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_contact_group_info_clear_conversation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/clear_group_conversation"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/red_light2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/press_rectangle_white_gray"
            />

        <TextView
            android:id="@+id/tv_contact_group_info_exit_group"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            tools:text="@string/disband_group"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/red_light2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/press_rectangle_white_gray"
            />

    </LinearLayout>

</ScrollView>