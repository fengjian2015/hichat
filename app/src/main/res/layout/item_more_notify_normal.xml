<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.wewin.hichat.androidlib.widget.CircleImageView
            android:id="@+id/civ_item_more_notify_avatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_avatar_default"
            app:shape_type="round"
            />

        <TextView
            android:id="@+id/tv_more_notify_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:textSize="@dimen/font_size_15"
            android:textColor="@color/black_00"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_more_notify_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Content"
            android:textSize="@dimen/font_size_13"
            android:textColor="@color/black_00"
            android:layout_marginLeft="66dp"
            android:layout_below="@+id/tv_more_notify_name"
            android:layout_marginRight="23dp"
            />

        <TextView
            android:id="@+id/tv_more_notify_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Remark"
            android:textSize="@dimen/font_size_13"
            android:textColor="@color/gray_92"
            android:layout_below="@+id/tv_more_notify_note"
            android:layout_marginLeft="66dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_f1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_item_more_notify_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="state"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/gray_b5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btn_item_more_notify_refuse"
            android:layout_width="55dp"
            android:layout_height="28dp"
            style="@style/btn_corner_stroke_gray_white_gray"
            android:text="@string/refuse"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/red_light2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            />

        <Button
            android:id="@+id/btn_item_more_notify_agree"
            android:layout_width="55dp"
            android:layout_height="28dp"
            style="@style/btn_corner_stroke_gray_white_gray"
            android:text="@string/agree"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/blue_main"
            android:layout_alignParentRight="true"
            android:layout_marginRight="82dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_f9" />


</LinearLayout>