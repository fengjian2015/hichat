<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/corner_gray_e9_4"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/find_gray"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <EditText
            android:id="@+id/et_conversation_record_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/conversation_search_hint"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:textColorHint="@color/gray_99"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="31dp"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="30"
            android:gravity="center_vertical"
            android:layout_marginRight="40dp"
            />

        <ImageView
            android:id="@+id/iv_conversation_record_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/empty_btn_gray"
            android:layout_gravity="end"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:visibility="invisible"
            />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_conversation_record_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>