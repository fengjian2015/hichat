<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_f9"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true">

                <com.wewin.hichat.androidlib.widget.CircleImageView
                    android:id="@+id/iv_contact_group_create_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_gray_fa"
                    app:shape_type="round"
                    />

                <ImageView
                    android:id="@+id/iv_contact_group_create_icon"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:src="@drawable/camera_registered_blue"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <EditText
                android:id="@+id/et_contact_group_create_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/group_nickname"
                android:textSize="@dimen/font_size_14"
                android:textColorHint="@color/gray_92"
                android:textColor="@color/black_00"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="22dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:maxLength="12"
                />

            <TextView
                android:id="@+id/tv_contact_group_create_name_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/12"
                android:textSize="@dimen/font_size_11"
                android:textColor="@color/gray_c3"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_marginLeft="22dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_contact_group_create_introduce"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:hint="@string/introduce_group_simply"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/black_00"
                android:textColorHint="@color/gray_c3"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:gravity="start"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:maxLength="120"
                />

            <TextView
                android:id="@+id/tv_contact_group_create_introduce_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/120"
                android:textSize="@dimen/font_size_11"
                android:textColor="@color/gray_c3"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:text="@string/group_scale"
                android:textColor="@color/black_33"
                android:textSize="@dimen/font_size_14" />

            <LinearLayout
                android:id="@+id/ll_contact_group_create_200"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="34dp">

                <CheckBox
                    android:id="@+id/cb_contact_group_create_200"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/check_corner_img_hook"
                    android:button="@null"
                    android:checked="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="200"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_group_create_500"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="35dp">

                <CheckBox
                    android:id="@+id/cb_contact_group_create_500"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/check_corner_img_hook"
                    android:button="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="500"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_group_create_1000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="35dp">

                <CheckBox
                    android:id="@+id/cb_contact_group_create_1000"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:button="@null"
                    android:background="@drawable/check_corner_img_hook"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="1000"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_marginLeft="22dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:text="@string/add_group_verify"
                android:textColor="@color/black_33"
                android:textSize="@dimen/font_size_14" />

            <LinearLayout
                android:id="@+id/ll_contact_group_create_need_verify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="34dp">

                <CheckBox
                    android:id="@+id/cb_contact_group_create_need_verify"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:button="@null"
                    android:background="@drawable/check_corner_img_hook"
                    android:checked="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/need_verify"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_group_create_not_verify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp">

                <CheckBox
                    android:id="@+id/cb_contact_group_create_not_verify"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/check_corner_img_hook"
                    android:button="@null"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/need_not_verify"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            tools:text="成员 5人"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/gray_92"
            android:paddingLeft="22dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_contact_group_create_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            >

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>