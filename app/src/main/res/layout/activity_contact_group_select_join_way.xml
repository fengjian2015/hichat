<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_select_correct"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allow_everyone_join_group"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            android:layout_marginLeft="56dp"
            android:layout_gravity="center_vertical"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/divider_height">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_select_correct"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/need_identify_verify"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            android:layout_marginLeft="56dp"
            android:layout_gravity="center_vertical"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/divider_height">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_select_correct"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/only_allow_member_invite_join"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            android:layout_marginLeft="56dp"
            android:layout_gravity="center_vertical"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/divider_height">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_select_correct"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_one_can_join"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            android:layout_marginLeft="56dp"
            android:layout_gravity="center_vertical"
            />

    </FrameLayout>

</LinearLayout>