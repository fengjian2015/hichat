<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_item_contact_group_member_letter"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/gray_f9"
        android:paddingLeft="12dp"
        tools:text="A"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/gray_92"
        android:gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.wewin.hichat.androidlib.widget.CircleImageView
            android:id="@+id/iv_item_contact_group_member_avatar"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/img_avatar_default"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            app:shape_type="round"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_item_contact_group_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:layout_marginLeft="66dp"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/black_00"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_item_contact_group_member_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="role"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/gray_92"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_marginLeft="66dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>



</LinearLayout>