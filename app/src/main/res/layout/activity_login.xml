<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="64dp">

        <TextView
            android:id="@+id/tv_login_country"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/philippines"
            android:textSize="@dimen/font_size_17"
            android:textColor="@color/blue_main"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:src="@drawable/arrow_right_gray"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="25dp"
            />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_divide_main"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/tv_login_area_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+63"
            android:textSize="@dimen/font_size_19"
            android:textColor="@color/black_00"
            />

        <EditText
            android:id="@+id/et_login_phone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/phone_num"
            android:textSize="@dimen/font_size_14"
            android:textColorHint="@color/gray_be"
            android:textColor="@color/black_00"
            android:layout_marginLeft="30dp"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:maxLines="1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_divide_main"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@null"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="@string/pwd_login_hint"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/gray_be"
        android:textColor="@color/black_00"
        android:maxLength="20"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_divide_main"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

    <TextView
        android:id="@+id/tv_login_find_back_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pwd_find_back"
        android:textColor="@color/blue_main"
        android:textSize="@dimen/font_size_12"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/btn_corner_blue_blue"
        android:layout_marginTop="35dp"
        android:text="@string/login_confirm"
        android:enabled="false"
        />

    <TextView
        android:id="@+id/tv_login_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:visibility="invisible"
        />

</LinearLayout>