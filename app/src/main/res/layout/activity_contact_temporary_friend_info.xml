<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:background="@color/gray_f1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <com.wewin.hichat.androidlib.widget.CircleImageView
            android:id="@+id/iv_contact_temporary_friend_info_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            app:shape_type="round"
            android:src="@drawable/img_avatar_default"
            />

        <TextView
            android:id="@+id/tv_contact_temporary_friend_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/black_00"
            android:layout_marginLeft="95dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_f1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="22dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_contact_temporary_friend_info_sign"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        tools:text="sign"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/black_00"
        android:gravity="center_vertical"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sex"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/gray_be"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/tv_contact_temporary_friend_info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_f1"
        android:layout_marginLeft="22dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/state"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/gray_be"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/tv_contact_temporary_friend_info_online_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_contact_temporary_friend_info_add_friend"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/add_friend"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/blue_main"
        android:gravity="center"
        android:background="@drawable/press_rectangle_white_gray"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_contact_temporary_friend_info_send_msg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/send_message"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/blue_main"
        android:gravity="center"
        android:background="@drawable/press_rectangle_white_gray"
        android:layout_marginTop="10dp"
        />

</LinearLayout>