<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allow_member_invite_friend"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />

        <CheckBox
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:button="@null"
            android:background="@null"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:drawableTop="@drawable/check_corner_img_slide"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/divider_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_way"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_member_invite_friend_prompt"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/gray_99"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="6dp"
        />

</LinearLayout>