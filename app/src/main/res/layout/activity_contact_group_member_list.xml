<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_member"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/gray_92"
                />

            <TextView
                android:id="@+id/tv_contact_group_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/blue_main"
                />

            <TextView
                android:id="@+id/tv_contact_group_member_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sum"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/gray_92"
                />

            <TextView
                android:id="@+id/tv_contact_group_manager_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="num"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/blue_main"
                />

            <TextView
                android:id="@+id/tv_contact_group_manager_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/5äºº"
                android:textSize="@dimen/font_size_12"
                android:textColor="@color/gray_92"
                />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_contact_group_member_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:scrollbars="none"
        >

    </ListView>

</LinearLayout>