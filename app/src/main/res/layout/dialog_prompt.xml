<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/corner_white_4">

        <TextView
            android:id="@+id/tv_dialog_prompt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="content"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />

        <include layout="@layout/layout_divider_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_prompt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:gravity="center"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/gray_99"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_dialog_prompt_bot_divider"
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:background="@color/gray_divide_main"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_dialog_prompt_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/confirm"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/blue_main"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>