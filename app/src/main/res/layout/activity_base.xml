<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="gone"
        android:background="@color/gray_f7">

        <LinearLayout
            android:id="@+id/ll_base_left_back_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/iv_base_left_back"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/arrow_left_black" />

            <ImageView
                android:id="@+id/iv_base_left_cancel"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/cancel_black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_base_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="@color/blue_main"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone"
                tools:text="left" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_base_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black_00"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_16" />
        
        <ImageView
            android:id="@+id/iv_base_right_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_base_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/enable_blue_gray"
            android:textSize="@dimen/font_size_17"
            android:visibility="visible"
            tools:text="right"
            android:enabled="true"
            />

        <TextView
            android:id="@+id/tv_base_title_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/gray_divide_title"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/vf_base_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


    </ViewFlipper>


</LinearLayout>