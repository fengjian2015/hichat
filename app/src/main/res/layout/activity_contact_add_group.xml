<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/img_group"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_contact_group_add_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_arrow_left_white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_info"
                android:textSize="@dimen/font_size_17"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:id="@+id/iv_contact_group_add_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nav_but_black"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_contact_group_add_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/white"
            tools:text="num"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tv_contact_group_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:textSize="@dimen/font_size_17"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_contact_add_group_add_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表获取某用户的好友列表，群列表"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_33"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_alignBottom="@+id/tv_contact_add_group_add_introduce"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expand"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/blue_main"
                android:visibility="invisible"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_admin"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_33"
                android:layout_marginLeft="15dp"
                />

            <com.wewin.hichat.androidlib.widget.CircleImageView
                android:id="@+id/civ_contact_group_add_owner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:shape_type="round"
                />

            <com.wewin.hichat.androidlib.widget.CircleImageView
                android:id="@+id/civ_contact_group_add_manage_center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:shape_type="round"
                />

            <com.wewin.hichat.androidlib.widget.CircleImageView
                android:id="@+id/civ_contact_group_add_manage_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:shape_type="round"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_contact_group_add_member_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="共3人"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/gray_99"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_contact_group_add_apply"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            style="@style/btn_corner_blue_blue"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:text="@string/apply_add_group"
            />

    </FrameLayout>

</LinearLayout>