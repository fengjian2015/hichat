<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/corner_white_4">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dialog_prompt_top_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/group_announcement"
                android:textSize="@dimen/font_size_15"
                android:textColor="@color/black_00"
                android:gravity="center"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/iv_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/cancel_black"
                android:padding="15dp"
                android:layout_gravity="end|center_vertical"/>
        </FrameLayout>
        <include layout="@layout/layout_divider_2"/>
        <TextView
            android:id="@+id/tv_dialog_prompt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="content"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:singleLine="true"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/tv_dialog_prompt_name_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="content"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/gray_be"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/tv_dialog_prompt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="content"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:lineSpacingExtra="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

        <include layout="@layout/layout_divider_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_prompt_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/okay_get_it"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/blue_main"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>