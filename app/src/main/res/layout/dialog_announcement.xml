<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/corner_white_4"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_prompt_top_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/group_announcement"
                android:textColor="@color/black_00"
                android:textSize="@dimen/font_size_15" />
        </FrameLayout>

        <include layout="@layout/layout_divider_2" />

        <TextView
            android:id="@+id/tv_dialog_prompt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/black_00"
            android:textSize="@dimen/font_size_14"
            tools:text="content" />


        <com.wewin.hichat.androidlib.widget.AlignTextView
            android:id="@+id/tv_dialog_prompt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black_00"
            android:textSize="@dimen/font_size_14"
            android:scrollbars="vertical"
            android:maxHeight="140dp"
            tools:text="content" />

        <TextView
            android:id="@+id/tv_dialog_prompt_name_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/gray_be"
            android:textSize="@dimen/font_size_10"
            tools:text="content" />

        <include layout="@layout/layout_divider_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_prompt_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/okay_get_it"
                android:textColor="@color/blue_main"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>