<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/gray_e9"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        >

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/find_gray"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/et_search_country_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/country_search_hint"
            android:textColorHint="@color/gray_99"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_search_country_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/none_color"
        android:dividerHeight="0dp"
        android:layout_marginTop="52dp"
        android:scrollbars="none">

    </ListView>

    <com.wewin.hichat.androidlib.widget.SideBarView
        android:id="@+id/sbv_search_country_side"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_search_country_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/gray_99"
        android:textSize="48sp"
        android:visibility="invisible" />

</RelativeLayout>