<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">

            <com.wewin.hichat.androidlib.widget.CircleImageView
                android:id="@+id/civ_contact_group_info_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:src="@drawable/img_avatar_group_default"
                app:shape_type="round"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/photo_replace_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_contact_group_info_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@null"
            tools:text="name"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            android:maxLength="12"
            />

        <TextView
            android:id="@+id/tv_contact_group_info_name_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/12"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/gray_c3"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_contact_group_info_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:hint="@string/group_introduce"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/black_00"
            android:gravity="start"
            android:maxLength="120"
            />

        <TextView
            android:id="@+id/tv_contact_group_info_sign_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/120"
            android:textSize="@dimen/font_size_11"
            android:textColor="@color/gray_c3"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            />

    </FrameLayout>

</LinearLayout>