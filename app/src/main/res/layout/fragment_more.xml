<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/personal_info"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/black_00"
        android:gravity="center"
        android:textStyle="bold"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/gray_divide_title"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

            <RelativeLayout
                android:id="@+id/rl_more_personal_container"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white">

                <com.wewin.hichat.androidlib.widget.CircleImageView
                    android:id="@+id/civ_more_personal_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_avatar_default"
                    app:shape_type="round"
                    />

                <TextView
                    android:id="@+id/tv_more_personal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="name"
                    android:textSize="@dimen/font_size_15"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:id="@+id/tv_more_personal_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="sign"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/gray_92"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="49dp"
                    android:maxLength="50"
                    android:layout_marginRight="32dp"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginRight="12dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textSize="11dp"
                android:textColor="@color/gray_be"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="9dp"
                />

            <TextView
                android:id="@+id/tv_more_personal_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="13322223333"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/black_00"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/gray_f1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="22dp"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_gender_container"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex"
                    android:textSize="11dp"
                    android:textColor="@color/gray_be"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="9dp"
                    />

                <TextView
                    android:id="@+id/tv_more_personal_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/keep_secret"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="27dp"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end|center_vertical"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/gray_f1"
                android:layout_marginLeft="22dp"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_state_container"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state"
                    android:textSize="11dp"
                    android:textColor="@color/gray_be"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="9dp"
                    />

                <TextView
                    android:id="@+id/tv_more_personal_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/blue_main"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="27dp"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end|center_vertical"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_audio_remind"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_audio_remind"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="22dp"
                    android:layout_gravity="center_vertical"
                    />

                <CheckBox
                    android:id="@+id/cb_more_personal_audio_remind"
                    android:layout_width="33dp"
                    android:layout_height="17dp"
                    android:button="@null"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/check_corner_img_slide"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/gray_f1"
                android:layout_marginLeft="22dp"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_vibrate_remind"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_vibrate_remind"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_marginLeft="22dp"
                    android:layout_gravity="center_vertical"
                    />

                <CheckBox
                    android:id="@+id/cb_more_personal_vibrate_remind"
                    android:layout_width="33dp"
                    android:layout_height="17dp"
                    android:button="@null"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/check_corner_img_slide"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_notify"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_notification"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end|center_vertical"
                    />

                <ImageView
                    android:id="@+id/iv_more_new_notify_res_point"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/corner_red_3"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="12dp"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/gray_f1"
                android:layout_marginLeft="22dp"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_modify_pwd"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end|center_vertical"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/gray_f1"
                android:layout_marginLeft="22dp"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_login_record"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_login_record"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end|center_vertical"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

            <FrameLayout
                android:id="@+id/fl_more_personal_about"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_hichat"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="22dp"
                    />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end|center_vertical"
                    />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

            <TextView
                android:id="@+id/tv_more_personal_logout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/logout_current_account"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/red_light2"
                android:gravity="center"
                android:background="@drawable/press_rectangle_white_gray"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f1"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>