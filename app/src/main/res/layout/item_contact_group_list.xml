<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_contact_group_letter"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/gray_f9"
        tools:text="A"
        android:textSize="@dimen/font_size_12"
        android:textColor="@color/gray_92"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <com.wewin.hichat.androidlib.widget.CircleImageView
            android:id="@+id/civ_contact_group_avatar"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:shape_type="round"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_avatar_default"
            />

        <TextView
            android:id="@+id/tv_contact_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="名字名字名字名字名字名字名字名字名字名字名字名字名字名字名字名字"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/black_00"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/tv_contact_group_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/gray_92"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="66dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_contact_group_name"
            android:layout_marginTop="2dp"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_f1"
        android:layout_marginLeft="66dp"
        />

</LinearLayout>