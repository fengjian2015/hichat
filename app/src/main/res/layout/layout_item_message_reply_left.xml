<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_message_chat_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="time"
        android:textSize="@dimen/font_size_11"
        android:textColor="@color/gray_ac"
        android:gravity="center"
        android:paddingBottom="9dp"
        />

    <include layout="@layout/layout_item_message_extra_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_message_chat_reply_container"
        android:layout_alignTop="@+id/ll_message_chat_reply_container"
        android:layout_alignBottom="@+id/ll_message_chat_reply_container"
        android:layout_below="@+id/tv_message_chat_date"
        />

    <!--头像-->
    <ImageView
        android:id="@+id/civ_message_chat_left_avatar"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/tv_message_chat_date"
        tools:src="@drawable/img_avatar_default"
        />
    <!--名字-->
    <TextView
        android:id="@+id/tv_conversation_chat_left_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_11"
        android:textColor="@color/gray_ac"
        android:layout_marginLeft="52dp"
        android:layout_below="@+id/tv_message_chat_date"
        android:layout_marginBottom="5dp"
        android:text="name"/>
    <!--回复-->
    <RelativeLayout
        android:id="@+id/ll_message_chat_reply_container"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:background="@drawable/message_bg_white_left"
        android:layout_below="@+id/tv_conversation_chat_left_name"
        >

        <RelativeLayout
            android:id="@+id/rl_message_chat_reply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_gray_8"
            android:padding="5dp"
            >
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/blue_main"
                android:layout_alignTop="@+id/rl_message_reply_tape"
                android:layout_alignBottom="@id/rl_message_reply_tape"
                />
            <RelativeLayout
                android:id="@+id/rl_message_reply_tape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                >
                <com.wewin.hichat.androidlib.widget.CornerGifView
                    android:id="@+id/iv_message_chat_reply_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/con_img_vertical"
                    android:layout_marginRight="5dp"
                    app:cornerSize="4dp"
                    />
                <ImageView
                    android:id="@+id/iv_chat_file_download_state"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/iv_message_chat_reply_video"
                    android:layout_width="35dp"
                    android:layout_height="12dp"
                    android:src="@drawable/video_play"
                    android:layout_toRightOf="@+id/tv_1"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_message_chat_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/blue_main"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/iv_message_chat_reply_img"
                    tools:text="name"/>
                <LinearLayout
                    android:id="@+id/ll_message_chat_voice_record_container"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:background="@drawable/corner_blue_6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_message_chat_reply_name"
                    android:layout_toRightOf="@+id/iv_message_chat_reply_img"
                    >

                    <ImageView
                        android:id="@+id/iv_conversation_chat_tape_record_anim"
                        android:layout_width="19dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/anim_tape_record_playing_white" />

                    <TextView
                        android:id="@+id/tv_message_chat_voice_record_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_14"
                        tools:text="00:00" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="7dp">

                        <ImageView
                            android:id="@+id/iv_conversation_chat_tape_record_loading"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:src="@drawable/audio_loading_white"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/iv_conversation_chat_tape_record_play"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/msg_btn_play_white"
                            />

                    </FrameLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_message_chat_reply_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/black_00"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/iv_message_chat_reply_img"
                    android:layout_below="@+id/tv_message_chat_reply_name"
                    tools:text="type"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_message_chat_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/black_00"
            android:layout_marginTop="5dp"
            tools:text="content"
            android:layout_below="@+id/rl_message_chat_reply_content"/>
    </RelativeLayout>

</RelativeLayout>